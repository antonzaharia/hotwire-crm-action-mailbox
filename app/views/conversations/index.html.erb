<div class="rows">
  <div class="left-sidebar">
    <% @conversations.each do |conversation| %>
      <div class="conversation">
        <%= link_to conversation.subject, [@contact, conversation], data: { turbo_frame: 'conversation_show' } %>
      </div>
    <% end %>
  </div>
  <%= turbo_frame_tag "conversation_show", class: 'full-width wide-margins' do %>
    <%= render "conversations/empty_state" %>
  <% end %>
</div>